" Remap d to delete without yanking (using black hole register)
nnoremap d "_d
vnoremap d "_d

" Remap x to delete without yanking (using black hole register)
nnoremap x "_x
vnoremap x "_x

" Map U to redo (Ctrl-r)
nnoremap U <C-r>

" Remap easymotion word start
map s <leader><leader><leader>bdw
" Remap easymotion word search
map S <leader><leader>s

" Map Ctrl-n to Enter in search mode
cnoremap <C-m> <CR>
cnoremap <C-l> <C-g>
cnoremap <C-h> <C-t>

nnoremap <C-j> 10<C-e>
nnoremap <C-k> 10<C-y>

vnoremap gl $
nnoremap gl $
onoremap gl $
vnoremap gh ^
nnoremap gh ^
onoremap gh ^

" map V in Visual-Line to j for better navigation
vnoremap V j

" Map new line
nnoremap <leader>j o<ESC>k
nnoremap <leader>k O<ESC>j


